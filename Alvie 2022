import discord
import os
import random

client = discord.Client()

#start of code : Console
@client.event
async def on_ready():
  print("All Hail Alcor")
  print("Al-V at your service!")
  print(client.user)
    
#Does not repeat itself     
@client.event
async def on_message(message):
  if message.author == client.user:
    return  

#questions 
  if message.content == "Who are you?":
    await message.channel.send(f'**I am a virtual creation based off of my creator, Alcor! Made to spite Twinners and desrupt corrupt government facilites! I have been called the Alcor Virus via chaotic tendencies, but you can call me Al-V or Alvie if that suits your meatsack processor! And you are *{message.author.name}!***')
  
